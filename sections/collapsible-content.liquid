{{ 'section-collapsible-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
	{% render 'section-padding' %}
		{% render 'section-margin' %}
{%- endstyle -%}

<link
	rel="stylesheet"
	href="{{ 'component-accordion.css' | asset_url }}"
	media="print"
	onload="this.media='all'"
>

<div class="collapsible-content section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} background {% if section.settings.enable_border_top %}section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}">
	<div class="container">
		<div class="collapsible-content-wrapper">
			{% if section.settings.heading != blank
				or section.settings.description != blank
				or section.settings.button_label != blank
			%}
				<div class="collapsible-content__title-box">
					{%- if section.settings.heading != blank -%}
						<h2 class="collapsible-content__title">
							{{ section.settings.heading | escape }}
						</h2>
					{%- endif -%}

					{%- if section.settings.description != blank -%}
						<div class="collapsible-content-desc richtext__content large-font">
							{{ section.settings.description }}
						</div>
					{%- endif -%}

					{%- if section.settings.button_label != blank -%}
						{% render 'button', layout: section %}
					{%- endif -%}
				</div>
			{%- endif -%}

			<div class="collapsible-content-box">
				{% for block in section.blocks %}
					{% if block.settings.block_heading != blank
						and block.settings.text != blank
					%}
						<div class="collapsible-content-block">
							<div class="accordion collapsible-content-item">
								<details>
									<summary>
										<h5 class="collapsible-content-block__heading h8">
											{{ block.settings.block_heading }}
										</h5>
										{% render 'icon-caret-small' %}
									</summary>
									{%- if block.settings.text != blank -%}
										<div class="collapsible-content-block__description large-font richtext__content">
											{{ block.settings.text }}
										</div>
									{%- endif -%}
								</details>
							</div>
						</div>
					{%- endif -%}
				{% endfor %}
			</div>
		</div>
	</div>
</div>

{% schema %}
{
	"name": "t:sections.collapsible-content.name",
	"class": "collapsible-content-section",
	"tag": "section",
	"enabled_on": {
		"templates": ["*"]
	},
	"settings": [
		{
			"type": "color_scheme",
			"id": "color_scheme",
			"default": "background-1",
			"label": "t:sections.all.color_scheme.label"
		},
		{
			"type": "inline_richtext",
			"id": "heading",
			"default": "Heading",
			"label": "t:sections.all.heading.label"
		},
		{
			"type": "inline_richtext",
			"id": "description",
			"default": "Description",
			"label": "t:sections.all.description.label"
		},
		{
			"type": "header",
			"content": "t:sections.all.button.header.content"
		},
		{
			"type": "text",
			"id": "button_label",
			"default": "Button label",
			"label": "t:sections.all.button.label.label"
		},
		{
			"type": "url",
			"id": "button_link",
			"label": "t:sections.all.button.link.label"
		},
		{
			"type": "select",
			"id": "button_style",
			"options": [
				{
					"value": "primary",
					"label": "t:sections.all.button.style.options__1.label"
				},
				{
					"value": "secondary",
